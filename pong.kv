#:kivy 1.9.1

<PongBall>:
	size: 10,10
	
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 25, 200
    
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size
            
<PongGame>:
	ball: ball
	player1: player1
	player2: player2
	
    canvas:
		Color:
			rgb: 0.5,0.5,0
		Rectangle:
			pos: self.center_x - self.width/2, self.center_y - self.height/2
			size: self.size

		Color:
			rgb: 1,1,1	
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height
    
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    PongBall:
        id: ball
        center: root.center
        
        
    PongPaddle:
        id: player1
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player2
        x: root.width-self.width
        center_y: root.center_y
        